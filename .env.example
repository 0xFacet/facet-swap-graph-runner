# Project name (used for volume naming)
COMPOSE_PROJECT_NAME=facet-graph

# Network configuration
NETWORK_NAME=facet
ETHEREUM_RPC_URL=https://mainnet.facet.org

# Image versions
GRAPH_NODE_VERSION=v0.35.1
IPFS_VERSION=v0.17.0
POSTGRES_VERSION=15

# Postgres
POSTGRES_USER=graph-node
POSTGRES_PASSWORD=let-me-in
POSTGRES_DB=graph-node
POSTGRES_MAX_CONNECTIONS=200

# Ports (optional - defaults shown)
GRAPHQL_PORT=8000
GRAPHQL_WS_PORT=8001
ADMIN_PORT=8020
INDEX_STATUS_PORT=8030
METRICS_PORT=8040
IPFS_PORT=5001
POSTGRES_PORT=5432

# Graph node settings
GRAPH_LOG=info

# Subgraph deployment
SUBGRAPH_REPO=https://github.com/0xFacet/facetswap-subgraph.git
SUBGRAPH_REF=main
SUBGRAPH_NAME=facetswap/mainnet
